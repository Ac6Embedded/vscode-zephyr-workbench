// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "watch",
			"problemMatcher": {
				"owner": "esbuild",
				"fileLocation": ["relative", "${workspaceFolder}"],
				"pattern": {
					"regexp": "> (.*):(\\d+):(\\d+): error: (.*)$",
					"file": 1,
					"line": 2,
					"column": 3,
					"message": 4,
					"severity": "error"
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "\\[watch\\] build started",
					"endsPattern": "\\[watch\\] build finished"
				}
			},
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}
