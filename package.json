  "author": {
    "name": "Ac6-Tools",
    "email": "tools@ac6.fr",
    "url": "https://www.ac6-tools.com"
  },
  "contributors": [
    "Kevin Tang"
  ],
  "keywords": [
    "cmake",
    "west",
    "yaml",
    "tools",
    "build",
    "c",
    "c++",
    "rtos",
    "zephyr"
  ],
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": [
    "Other",
    "Debuggers",
    "Programming Languages"
  ],
  "activationEvents": [
    "workspaceContains:prj.conf"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": [
      {
        "id": "ac6-zephyr",
        "title": "Ac6 Zephyr",
        "order": 1,
        "properties": {
          "zephyr.pathToEnvScript": {
            "type": "string",
            "examples": [
              "${userHome}/.zinstaller/env.sh"
            ],
            "markdownDescription": "Set the path to the environment script to configure the Zephyr environment. ",
            "scope": "machine"
          },
          "zephyr.westWorkspace": {
            "type": "string",
            "default": "",
            "description": "Attached west workspace",
            "scope": "resource"
          },
          "zephyr.board": {
            "type": "string",
            "default": "",
            "description": "The project target board",
            "scope": "resource"
          }
        }
      }
    ],
    "commands": [
      {
        "command": "vscode-zephyr-workbench.install-host-tools",
        "title": "Zephyr Workbench: Install Host Tools",
        "icon": "$(desktop-download)"
      },
      {
        "command": "ac6-zephyr-sdk-explorer.import-sdk",
        "title": "Import Zephyr SDK"
      },
      {
        "command": "ac6-zephyr-module-explorer.create-module",
        "title": "Create new Zephyr Extra Module"
      },
      {
        "command": "west.version",
        "title": "Get a west version",
        "category": "West"
      },
      {
        "command": "west.init",
        "title": "Create a west workspace [init]",
        "category": "West"
      },
      {
        "command": "west.update",
        "title": "Update projects described in west manifest [update]",
        "category": "West"
      },
      {
        "command": "west.build",
        "title": "Compile a Zephyr application [build]",
        "category": "West"
      },
      {
        "command": "west.flash",
        "title": "Flash and run a binary on a board [flash]",
        "category": "West"
      },
      {
        "command": "west.debug",
        "title": "Flash and interactively debug a Zephyr application [debug]",
        "category": "West"
      },
      {
        "command": "ac6-zephyr-app-explorer.open-app-wizard",
        "title": "Create new Zephyr Application",
        "icon": "$(add)"
      },
      {
        "command": "ac6-zephyr-app-explorer.create-app",
        "title": "Create new Zephyr Application"
      },
      {
        "command": "ac6-zephyr-app-explorer.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "ac6-zephyr-app-explorer.build-app",
        "title": "Build",
        "icon": "$(gear)"
      },
      {
        "command": "ac6-zephyr-app-explorer.run-app",
        "title": "Run",
        "icon": "$(run)"
      },
      {
        "command": "ac6-zephyr-app-explorer.debug-app",
        "title": "Debug",
        "icon": "$(debug-alt)"
      },
      {
        "command": "ac6-zephyr-app-explorer.open-app",
        "title": "Open in Explorer",
        "icon": "$(explorer-view-icon)"
      },
      {
        "command": "ac6-zephyr-module-explorer.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "ac6-zephyr-west-workspace.init",
        "title": "Initialize new west workspace",
        "icon": "$(add)"
      },
      {
        "command": "ac6-zephyr-west-workspace.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "ac6-zephyr-west-workspace.open-terminal",
        "title": "Open Terminal",
        "icon": "$(console)"
      },
      {
        "command": "zephyrSdk.deleteEntry",
        "title": "Delete"
      },
      {
        "command": "zephyrSdk.refreshEntry",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "zephyrSdk.setActiveEntry",
        "title": "Set Active"
      }
    ],
    "terminal": {
      "profiles": [
        {
          "id": "ac6-zephyr.terminal",
          "icon": "terminal",
          "title": "Zephyr BuildSystem Terminal"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ac6-zephyr",
          "title": "Zephyr Project by Ac6",
          "icon": "res/ac6/AC6.svg"
        }
      ]
    },
    "views": {
      "ac6-zephyr": [
        {
          "id": "ac6-zephyr-workbench",
          "name": "Zephyr Workbench",
          "contextualTitle": "Zephyr Workbench",
          "icon": "$(project)",
          "type": "tree"
        },
        {
          "id": "ac6-zephyr-app-explorer",
          "name": "Applications",
          "contextualTitle": "Zephyr user applications",
          "icon": "$(extensions-view-icon)",
          "type": "tree"
        },
        {
          "id": "ac6-zephyr-west-workspace",
          "name": "Zephyr west workspaces",
          "contextualTitle": "west workspaces with Zephyr sources and modules",
          "icon": "$(extensions-view-icon)",
          "type": "tree"
        },
        {
          "id": "ac6-zephyr-sdk-explorer",
          "name": "Zephyr SDK",
          "contextualTitle": "Zephyr SDK",
          "icon": "$(extensions-view-icon)",
          "type": "tree"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "ac6-zephyr-app-explorer",
        "contents": "[Create Zephyr application](command:ac6-zephyr-app-explorer.open-app-wizard)\n"
      },
      {
        "view": "ac6-zephyr-west-workspace",
        "contents": "Import the Zephyr sources from [Github](https://github.com/zephyrproject-rtos/zephyr) or enter your local sources and initialize your workspace\n[Initialize workspace](command:ac6-zephyr-west-workspace.init)\n"
      },
      {
        "view": "ac6-zephyr-sdk-explorer",
        "contents": "The Zephyr SDK is automatically detected after installing the Host Tools"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "ac6-zephyr-app-explorer.open-app-wizard",
          "group": "navigation",
          "when": "view == ac6-zephyr-app-explorer"
        },
        {
          "command": "ac6-zephyr-app-explorer.refresh",
          "group": "navigation",
          "when": "view == ac6-zephyr-app-explorer"
        },
        {
          "command": "ac6-zephyr-module-explorer.refresh",
          "group": "navigation",
          "when": "view == ac6-zephyr-module-explorer"
        },
        {
          "command": "ac6-zephyr-west-workspace.init",
          "group": "navigation",
          "when": "view == ac6-zephyr-west-workspace"
        },
        {
          "command": "ac6-zephyr-west-workspace.refresh",
          "group": "navigation",
          "when": "view == ac6-zephyr-west-workspace"
        },
        {
          "command": "zephyrSdk.refreshEntry",
          "group": "navigation",
          "when": "view == ac6-zephyr-sdk-explorer"
        }
      ],
      "view/item/context": [
        {
          "command": "ac6-zephyr-app-explorer.build-app",
          "group": "0@view/item/context@0",
          "when": "view == ac6-zephyr-app-explorer && viewItem == zephyr-application"
        },
        {
          "command": "ac6-zephyr-app-explorer.run-app",
          "group": "0@view/item/context@1",
          "when": "view == ac6-zephyr-app-explorer && viewItem == zephyr-application"
        },
        {
          "command": "ac6-zephyr-app-explorer.debug-app",
          "group": "0@view/item/context@2",
          "when": "view == ac6-zephyr-app-explorer && viewItem == zephyr-application"
        },
        {
          "command": "ac6-zephyr-app-explorer.open-app",
          "group": "0@view/item/context@3",
          "when": "view == ac6-zephyr-app-explorer && viewItem == zephyr-application"
        },
        {
          "command": "ac6-zephyr-app-explorer.build-app",
          "group": "inline@0",
          "when": "view == ac6-zephyr-app-explorer && viewItem == zephyr-application"
        },
        {
          "command": "ac6-zephyr-app-explorer.run-app",
          "group": "inline@1",
          "when": "view == ac6-zephyr-app-explorer && viewItem == zephyr-application"
        },
        {
          "command": "ac6-zephyr-app-explorer.debug-app",
          "group": "inline@2",
          "when": "view == ac6-zephyr-app-explorer && viewItem == zephyr-application"
        },
        {
          "command": "ac6-zephyr-west-workspace.open-terminal",
          "group": "inline@0",
          "when": "view == ac6-zephyr-west-workspace && viewItem == west-workspace"
        }
      ]
    },
    "taskDefinitions": [
      {
        "type": "west",
        "required": [
          "command"
        ],
        "properties": {
          "label": {
            "type": "string",
            "description": "The name of the task"
          },
          "command": {
            "type": "string",
            "enum": [
              "init",
              "update",
              "list",
              "manifest",
              "compare",
              "diff",
              "status",
              "forall",
              "boards",
              "build",
              "sign",
              "flash",
              "debug",
              "debugserver",
              "attach",
              "zephyr-export"
            ],
            "description": "West command"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "node ./esbuild.js",
    "package": "cross-env NODE_ENV=production node ./esbuild.js",
    "watch": "node ./esbuild.js --watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.88.0",
    "@types/vscode-webview": "^1.57.5",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9",
    "esbuild-plugin-copy": "^2.1.1",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "JSON": "^1.0.0",
    "sudo-prompt": "^9.2.1",
    "yaml": "^2.4.3"
  },
  "extensionPack": [
    "ms-vscode.cpptools",
		"ms-vscode.cpptools-extension-pack",
		"ms-vscode.vscode-serial-monitor",
		"ms-vscode.vscode-embedded-tools",
		"redhat.vscode-yaml",	
		"marus25.cortex-debug",	
		"trond-snekvik.kconfig-lang",	
		"trond-snekvik.devicetree"
  ]
}
